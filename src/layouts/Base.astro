---
import SpeedInsights from "@vercel/speed-insights/astro";
import Footer from "../components/Footer.astro"; // ✅ import footer

const {
  title = 'Jeremey Burch — Muralist & Illustrator',
  description = 'Transforming spaces into stories',
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=League+Spartan:wght@500;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col bg-ink text-paper font-body">
    <main class="flex-1">
      <slot />
    </main>

    <!-- Global footer -->
    <Footer />

    <!-- Vercel performance tracking -->
    <SpeedInsights />
  </body>
</html>
