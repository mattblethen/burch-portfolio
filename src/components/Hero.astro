---
const {
  headline = 'Transforming spaces into stories.',
  sub = 'Muralist & Illustrator | Lexington, KY'
} = Astro.props;
---

<section
  class="relative overflow-hidden isolate"
  style="min-height: clamp(30svh, 38vh, 40svh);"
>
  <!-- Background gradients pre-applied with fixed opacity -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="
      background-image:
        radial-gradient(ellipse at 20% 10%, rgba(43,170,160,0.45), transparent 55%),
        radial-gradient(ellipse at 80% 80%, rgba(242,107,56,0.35), transparent 55%);
      background-repeat: no-repeat;
      background-size: cover;
      opacity: 0.25;
    "
  ></div>

  <!-- Content wrapper -->
  <div class="relative mx-auto max-w-7xl px-6 pt-28 pb-16 text-balance">
    <h1
      class="font-heading text-5xl md:text-7xl font-black tracking-tight leading-[1.1] text-white drop-shadow-sm"
    >
      {headline}
    </h1>

    <p class="mt-5 text-lg text-white/80 leading-relaxed max-w-prose">
      {sub}
    </p>

    <div class="mt-10 flex flex-wrap gap-4">
      <a
        href="/contact"
        class="bg-flame text-ink px-5 py-3 rounded-xl font-semibold transition-transform duration-150 hover:scale-[1.02] active:scale-[0.98]"
      >
        Book a Mural
      </a>
      <a
        href="/portfolio"
        class="border border-tide text-tide px-5 py-3 rounded-xl transition-colors duration-150 hover:bg-tide/10"
      >
        View Portfolio
      </a>
    </div>
  </div>
</section>
